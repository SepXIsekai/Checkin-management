<!-- app/views/devise/registrations/new.html.erb -->
<% role = resource.role || params[:role] || 'student' %>

<h2>สมัคร<%= role == 'teacher' ? 'อาจารย์' : 'นักศึกษา' %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.hidden_field :role, value: role %>

  <% if role == 'teacher' %>
    <div class="field">
      <p><%= f.label :secret_code, "รหัสอาจารย์" %></p>
      <p><%= f.text_field :secret_code %></p>
    </div>
  <% end %>

  <div class="field">
    <p><%= f.label :name, "ชื่อ" %></p>
    <p><%= f.text_field :name %></p>
  </div>

  <% if role == 'student' %>
    <div class="field">
      <p><%= f.label :student_id, "รหัสนักศึกษา" %></p>
      <p><%= f.text_field :student_id %></p>
    </div>
  <% end %>

  <div class="field">
    <p><%= f.label :email %></p>
    <p><%= f.email_field :email %></p>
  </div>

  <div class="field">
    <p><%= f.label :password %></p>
    <p><%= f.password_field :password %></p>
  </div>

  <div class="field">
    <p><%= f.label :password_confirmation %></p>
    <p><%= f.password_field :password_confirmation %></p>
  </div>

  <div class="actions">
    <%= f.submit "สมัคร" %>
  </div>
<% end %>