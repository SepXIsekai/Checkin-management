<div class="flex items-center justify-center">
  <div class="w-full max-w-md">
    <div class="bg-white rounded-2xl shadow-md border border-slate-200 p-5 sm:p-6 md:p-8 flex flex-col gap-6">
      <div class="text-center">
        <h2 class="text-2xl font-bold text-slate-800">
          Forgot your password?
        </h2>
        <p class="text-sm text-slate-500 mt-1">
          Enter your email and weâ€™ll send reset instructions.
        </p>
      </div>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="flex flex-col gap-2">
          <%= f.label :email, class: "text-slate-800 text-sm font-medium" %>
          <div class="relative">
            <%= image_tag "login-page/badge-grey.svg", class: "absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 transition" %>
            <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              placeholder: "Enter Email",
              class: "w-full rounded-lg border border-slate-300 bg-slate-50 h-11 sm:h-12 pl-10 pr-4 text-sm sm:text-base focus:outline-none focus:ring-2 focus:ring-[#261ce6]/50 transition" %>
          </div>
        </div>
        <div class="mt-4">
          <%= button_tag type: "submit",
              class: "group w-full bg-[#261ce6] hover:bg-[#1a14a3] text-white font-semibold py-3 sm:py-3.5 rounded-lg transition active:scale-[0.98] shadow-md flex items-center justify-center gap-2" do %>
            <span>Send Reset Link</span>
            <span class="group-hover:translate-x-1 transition-transform shrink-0">
              <%= image_tag "login-page/chevron-right-white.svg",
                class: "w-5 h-5 sm:w-6 sm:h-6" %>
            </span>
          <% end %>
        </div>
      <% end %>
      <div class="text-center text-sm">
        <%= link_to "Back to Sign In",
            new_session_path(resource_name),
            class: "text-[#261ce6] font-semibold hover:underline" %>
      </div>
    </div>
  </div>
</div>
