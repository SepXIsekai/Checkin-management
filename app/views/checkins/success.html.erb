<!-- app/views/checkins/success.html.erb -->
<div class="flex justify-center pt-16 px-4 bg-[#f8fafc]">
  <div class="bg-white rounded-2xl shadow-lg w-full max-w-sm p-8 text-center">
    <div class="flex justify-center mb-5">
      <div class="w-14 h-14 rounded-full bg-green-100 flex items-center justify-center">
        <span class="text-green-600 text-2xl">âœ“</span>
      </div>
    </div>
    <h1 class="text-xl font-semibold text-slate-900 mb-2">
      Check-in Successful
    </h1>
    <p class="text-slate-500 text-sm">
      <span class="font-medium"><%= @course.code %></span><br>
      <%= @course.name %>
    </p>
    <p class="text-slate-500 text-sm mb-6">
      <%= @checkin_form.title %>
    </p>
    <% if @attendance.photo.attached? %>
      <div class="mb-6">
        <%= image_tag @attendance.photo,
          class: "w-24 h-24 object-cover rounded-full mx-auto ring-4 ring-green-100" %>
      </div>
    <% end %>
    <div class="bg-slate-50 rounded-xl p-4 text-sm text-slate-700 mb-6 text-left space-y-1">
      <p><span class="font-medium">Student ID:</span> <%= @attendance.student_id %></p>
      <p><span class="font-medium">Name:</span> <%= @attendance.name %></p>
      <p><span class="font-medium">Time:</span> <%= l(@attendance.checked_at, format: :long) %></p>
    </div>
    <%= link_to "Back to Home",
      student_dashboard_path,
      class: "w-full inline-flex items-center justify-center bg-[#261ce6] text-white py-2.5 rounded-lg text-sm font-medium hover:bg-[#1a14a3] transition active:scale-[0.98]" %>
  </div>
</div>
