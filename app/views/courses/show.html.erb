<!-- app/views/courses/show.html.erb -->
<h1 class="text-2xl font-bold mb-4"><%= @course.code %> - <%= @course.name %></h1>
<div class="bg-white rounded shadow p-6">
  <div class="grid grid-cols-2 gap-4 mb-6">
    <div>
      <p class="text-slate-500">ปีการศึกษา</p>
      <p class="font-semibold"><%= @course.year %></p>
    </div>
    <div>
      <p class="text-slate-500">ภาคเรียน</p>
      <p class="font-semibold"><%= @course.semester %></p>
    </div>
  </div>
  <div class="mb-6">
    <p class="text-slate-500 mb-2">อาจารย์ผู้สอน</p>
    <% @course.teachers.each do |teacher| %>
      <span class="inline-block bg-slate-200 rounded px-2 py-1 text-sm mr-2"><%= teacher.name %></span>
    <% end %>
  </div>
  <div class="flex gap-2">
    <%= link_to "แก้ไข", edit_course_path(@course), class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
    <%= button_to "ลบ", @course, method: :delete, data: { turbo_confirm: "ยืนยันการลบ?" }, class: "bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700" %>
  </div>
</div>