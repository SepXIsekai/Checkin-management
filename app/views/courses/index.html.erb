<!-- app/views/courses/index.html.erb -->
<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold">รายวิชาทั้งหมด</h1>
  <%= link_to "สร้างวิชาใหม่", new_course_path, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
</div>

<div class="bg-white rounded shadow">
  <table class="w-full">
    <thead class="bg-slate-50">
      <tr>
        <th class="text-left p-4">รหัสวิชา</th>
        <th class="text-left p-4">ชื่อวิชา</th>
        <th class="text-left p-4">ปี/เทอม</th>
        <th class="text-left p-4"></th>
      </tr>
    </thead>
    <tbody>
      <% @courses.each do |course| %>
        <tr class="border-t">
          <td class="p-4"><%= course.code %></td>
          <td class="p-4"><%= course.name %></td>
          <td class="p-4"><%= course.year %>/<%= course.semester %></td>
          <td class="p-4">
            <%= link_to "ดู", course, class: "text-blue-600 hover:underline" %>
            <%= link_to "แก้ไข", edit_course_path(course), class: "text-blue-600 hover:underline ml-2" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>